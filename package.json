{
  "name": "buclerk---time-assistant",
  "version": "1.0.0",
  "description": "BuClerk Time Assistant is part of the BuClerk service offering solutions for business automation, namely automation of business ( task manager ) and delegation of management and execution of tasks.",
  "main": "index.js",
  "scripts": {
    "server": "cross-env mode=development nodemon --watch \"./**\" --ext \"ts,json\" --ignore \"./**/*.spec.ts\" --exec \"ts-node ./index.ts\"",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run client\"  \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goethefau/BuClerk---Time-Assistant.git"
