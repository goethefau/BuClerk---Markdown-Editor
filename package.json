  },
  "homepage": "https://github.com/goethefau/BuClerk---Time-Assistant#readme",
  "dependencies": {
    "@faker-js/faker": "^6.0.0",
    "@types/express": "^4.17.13",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "http-status-codes": "^2.2.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.7.0",
    "tsc": "^2.0.4",
    "typescript": "^4.6.2"
